{
    "name": "natanfelles/http",
    "type": "library",
    "description": "The Framework HTTP Library",
    "keywords": [
        "http",
        "anti-csrf",
        "csrf",
        "message",
        "request",
        "response",
        "url",
        "cookie",
        "user-agent",
        "download",
        "rest"
    ],
    "homepage": "https://the-framework.gitlab.io/libraries/http.html",
    "license": "MIT",
    "authors": [
        {
            "name": "Natan Felles",
            "email": "natanfelles@gmail.com",
            "homepage": "https://natanfelles.github.io"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-fileinfo": "*",
        "ext-json": "*",
        "natanfelles/helpers": "^2.0"
    },
    "require-dev": {
        "ext-xdebug": "*",
        "ergebnis/composer-normalize": "^2.15",
        "jetbrains/phpstorm-attributes": "^1.0",
        "natanfelles/coding-standard": "^1.7",
        "phpmd/phpmd": "^2.10",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Framework\\HTTP\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\HTTP\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "support": {
        "email": "natanfelles@gmail.com",
        "issues": "https://gitlab.com/the-framework/libraries/http/issues",
        "wiki": "https://gitlab.com/the-framework/libraries/http/wikis/home",
        "source": "https://gitlab.com/the-framework/libraries/http",
        "docs": "https://the-framework.gitlab.io/libraries/http/docs/"
    }
}
